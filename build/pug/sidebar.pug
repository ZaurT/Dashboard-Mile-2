- var url = '../../'
- var subUrl = '../'

if PageName === 'index'
  - url = ''
  - subUrl = 'pages/'


aside.main-sidebar
  // sidebar: style can be found in sidebar.less
  section.sidebar
    each entry in NavItems
      ul.sidebar-menu(data-widget='tree')
        li.header= entry.name
          each item in entry.items
            
            if item.pageName == PageName
              - var activeClass = 'active'
            else 
              - var activeClass = ''

            li(class=`${activeClass}`)
              if entry.name
                - var link = subUrl + item.url
              else
                - var link = url + item.url
              a(href=`${link}`)
                i.fa.fa-circle-o
                span= item.name

    
  .text-center.position-bottom
    hr.margin-none
