extends ../head




block content
  .wrapper
    include ../header
    include ../sidebar
    // Content Wrapper. Contains page content
    .content-wrapper
      // Content Header (Page header)
      // Main content
      section.content-header
        h1
          | VKontakte Groups
      section.content
        .row
          // left column
          .col-md-12
            .box.box-primary.collapsed-box
              .box-header.with-border
                h3.box-title Filters
                .box-tools.pull-right
                  button.btn.btn-box-tool(type='button' data-widget='collapse')
                    i.fa.fa-plus
              // /.box-body
              .box-body(style='display: none;')
                .row
                  .col-lg-4
                    .form-group(style='display: inline-block; margin-bottom: 0; vertical-align: bottom; width: calc(100% - 200px); margin-right: 15px;')
                      label(for='exampleInputName') Group Name
                      input#InputGroupName.form-control(type='text' placeholder='Enter Dealer ID')
                    a.btn.btn-default.mr-15(href='#' type='submit' data-widget='collapse') Apply
                    a.btn.btn-default(href='#' type='submit' data-widget='collapse') Clear
        .row
          .col-md-12
            .box.box-primary
              .box-header.with-border
                h3.box-title Actions
              .box-body
                form(role='form')
                  a.btn.btn-success.mr-15(href='vk_groups_add.html' type='submit') Add
                  a.btn.btn-danger(href='#' type='button' data-toggle='modal' data-target='#modal-default') Delete
        .row
          .col-md-12
            .panel.panel-default
              // Default panel contents
              .panel-heading
                h4 Groups
              // Table
              table#example1.table
                thead
                  tr
                    th Group ID
                    th Group Name
                    th(style='width: 80%;') Confirmation Code
                    th.select-checkbox
                tbody
                  tr
                    td
                      | 158400126
                    td MINI
                    td EAAE***d0ZD
                    td.select-checkbox
      // /.content
    // /.content-wrapper
    // Control Sidebar
    aside.control-sidebar.control-sidebar-dark
      // Create the tabs
      ul.nav.nav-tabs.nav-justified.control-sidebar-tabs
